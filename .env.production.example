# Production Environment Configuration Template
# Copy this to .env and fill in your values

# Container Configuration
CONTAINER_NAME=lineage-prod
APP_PORT=8080

# Image Configuration
IMAGE_NAME=registry.ftco.ca/mfraser/lineage
IMAGE_TAG=production

# Database Configuration
DB_NAME=lineage
DB_USERNAME=lineage_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Optional: Domain for Traefik reverse proxy
DOMAIN=lineage.example.com

# Optional: LLM Configuration (if using AI features)
LLM_API_URL=http://localhost:11434/api/chat
LLM_MODEL=hf.co/unsloth/gpt-oss-20b-GGUF:Q4_K_M
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=20000

# GitLab Registry Credentials (for Watchtower auto-updates)
REGISTRY_USER=your-gitlab-username
REGISTRY_PASSWORD=your-gitlab-token